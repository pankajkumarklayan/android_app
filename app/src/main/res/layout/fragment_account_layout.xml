<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/account_marginLeft"
        android:layout_marginRight="@dimen/account_marginRight"
        android:layout_marginTop="@dimen/account_marginTop"
        android:layout_marginBottom="@dimen/account_marginBottom"
        android:elevation="10dp"
        android:background="@drawable/layout_back"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    >


                    <ImageView
                        android:id="@+id/iv_largeImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/banner7"
                        android:scaleType="centerCrop"
                        />

                    <ImageButton
                        android:id="@+id/Ib_camera"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="right|top"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="9dp"
                        android:background="@color/colorGray"
                        android:src="@mipmap/white_cemara" />
                    <ProgressBar
                        android:id="@+id/mProgressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mithlesh kumar"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/account_textmargin"
                        />

                    <TextView

                        android:id="@+id/tv_Joined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Joined June 2018"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="0dp"
                        />
                    <TextView
                        android:id="@+id/tv_Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mithlesh@gmail.com"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:layout_gravity="center"
                        android:drawableLeft="@mipmap/circle_mail"
                        />
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/IB_Setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/setting"
                android:layout_gravity="right|top"
                android:background="@color/colorGray"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/profile_w"
                android:layout_height="@dimen/profile_h"
                android:src="@mipmap/banner7"
                android:layout_gravity="center|center_horizontal"
                app:civ_border_width="2dp"
                app:civ_border_color="#fff"
                android:layout_marginBottom="@dimen/profile_bottom"
                />
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>