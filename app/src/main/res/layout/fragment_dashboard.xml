<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/border_blue_edit_back"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:weightSum="3"
        android:padding="0dp"
        >

        <TextView
            android:id="@+id/tv_selling"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/selling"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:background="@drawable/selling_blue_back"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>
        <TextView
            android:id="@+id/tv_sold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/sold"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>
        <TextView
            android:id="@+id/tv_favorite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/favorite"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mLocalContainer"
        android:background="#fff"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                >
            </android.support.v7.widget.RecyclerView>


            <TextView
                android:id="@+id/tv_noProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/no_product_available"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>



    </FrameLayout>

</LinearLayout>